<%= render "layouts/company_logo" %>
 <h1>Edit</h1>
 <p> Name: <%= @product.name %></p>
 <p> Cost: <%= @product.cost %></p>
 <p> Made in: <%= @product.country_of_origin %></p>

<%= render "layouts/product_form", :object => @product %>

<h4>Current reviews for this product</h4>

<div class="reviews">
  <% if @review.any? %>
  <ul class = "list-group">
    <% @review.each do |x| %>
    <li class =
    "list-group-item"><p><%=  x.author %></p><p><%=  x.content_body %></p></li>
    <li class =
    "list-group-item" id = "empty_row"></li>
    <% end %>
  </ul>
  <% else %>
  <p>Be the first to review this product!</p>
  <% end %>
</div>
<p><%= link_to "Add a Review", new_product_review_path(@product, @review) %></p>
<%= render "layouts/company_info" %>
